#!/bin/bash

echo ""
echo "Applying migration PayDate"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /payDate                  controllers.PayDateController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /payDate                  controllers.PayDateController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changePayDate                        controllers.PayDateController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changePayDate                        controllers.PayDateController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "payDate.title = PayDate" >> ../conf/messages.en
echo "payDate.heading = PayDate" >> ../conf/messages.en
echo "payDate.checkYourAnswersLabel = PayDate" >> ../conf/messages.en
echo "payDate.error.required.all = Enter the payDate" >> ../conf/messages.en
echo "payDate.error.required.two = The payDate" must include {0} and {1} >> ../conf/messages.en
echo "payDate.error.required = The payDate must include {0}" >> ../conf/messages.en
echo "payDate.error.invalid = Enter a real PayDate" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/  self: Generators =>/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPayDateUserAnswersEntry: Arbitrary[(PayDatePage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[PayDatePage.type]";\
    print "        value <- arbitrary[Int].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPayDatePage: Arbitrary[PayDatePage.type] =";\
    print "    Arbitrary(PayDatePage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(PayDatePage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration PayDate completed"
