#!/bin/bash

echo ""
echo "Applying migration BusinessClosedPeriods"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /businessClosedPeriods                  controllers.BusinessClosedPeriodsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /businessClosedPeriods                  controllers.BusinessClosedPeriodsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeBusinessClosedPeriods                        controllers.BusinessClosedPeriodsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeBusinessClosedPeriods                        controllers.BusinessClosedPeriodsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "businessClosedPeriods.title = BusinessClosedPeriods" >> ../conf/messages.en
echo "businessClosedPeriods.heading = BusinessClosedPeriods" >> ../conf/messages.en
echo "businessClosedPeriods.checkYourAnswersLabel = BusinessClosedPeriods" >> ../conf/messages.en
echo "businessClosedPeriods.error.required.all = Enter the businessClosedPeriods" >> ../conf/messages.en
echo "businessClosedPeriods.error.required.two = The businessClosedPeriods" must include {0} and {1} >> ../conf/messages.en
echo "businessClosedPeriods.error.required = The businessClosedPeriods must include {0}" >> ../conf/messages.en
echo "businessClosedPeriods.error.invalid = Enter a real BusinessClosedPeriods" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/  self: Generators =>/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryBusinessClosedPeriodsUserAnswersEntry: Arbitrary[(BusinessClosedPeriodsPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[BusinessClosedPeriodsPage.type]";\
    print "        value <- arbitrary[Int].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryBusinessClosedPeriodsPage: Arbitrary[BusinessClosedPeriodsPage.type] =";\
    print "    Arbitrary(BusinessClosedPeriodsPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(BusinessClosedPeriodsPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration BusinessClosedPeriods completed"
